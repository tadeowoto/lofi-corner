---
import type { Playlist } from "../lib/data";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, title, cover, artists, color } = playlist;
const artistString = artists.join(", ");
---

<a
  href={`/playlist/${id}`}
  class="playlist-item flex gap-2 rounded-lg p-1 hover:bg-zinc-800 hover:transform hover:scale-105 hover:transition-all"
>
  <picture class="w-14 h-14 flex-none">
    <img
      src={cover}
      alt={`${title} cover`}
      class="w-full h-full object-cover"
    />
  </picture>
  <div class="flex flex-col truncate">
    <h3 class="font-semibold">
      {title}
    </h3>
    <p class="text-zinc-400">{artistString}</p>
  </div>
</a>
