---
import type { Playlist } from "../lib/data";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, title, cover, color } = playlist;
---

<a
  href={`/playlist/${id}`}
  class="playlist-item max-w-70 flex gap-2 rounded-lg p-1 hover:bg-zinc-500/100 hover:transform hover:scale-105 hover:transition-all"
>
  <picture class="w-12 h-12 flex-none">
    <img
      src={cover}
      alt={`${title} cover`}
      class="w-full h-full object-cover"
      transition:name={`playlist-${id}-image`}
    />
  </picture>
  <div class="flex items-center justify-center truncate">
    <h3 class="font-semibold" transition:name={`playlist-${id}-title`}>
      {title}
    </h3>
  </div>
</a>
