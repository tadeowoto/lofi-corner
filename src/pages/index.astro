---
import Layout from "../layouts/Layout.astro";
import MainPlaylistItem from "../components/MainPlaylistItem.astro";
import { playlists } from "../lib/data";
import { Greeting } from "../components/Greeting";
---

<Layout>
  <div
    id="playlist-container"
    class="relative transition-all duration-1000 bg-violet-900 h-full overflow-x-hidden"
  >
    <!-- Page header here -->

    <div class="relative z-10 px-6 pt-10">
      <!-- Greetings -->
      <Greeting client:visible />

      <div class="grid grid-cols-3 grid-rows-2 gap-2 mt-10">
        {playlists.map((playlist) => <MainPlaylistItem playlist={playlist} />)}
      </div>
    </div>
    <div
      class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80"
    >
    </div>
  </div>
</Layout>
